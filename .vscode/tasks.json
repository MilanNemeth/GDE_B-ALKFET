{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "label": "webui",
      "path": "source/WebUI",
      "runOptions": {
        "instancePolicy": "terminateOldest",
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "close": true,
        "preserveTerminalName": true
      },
      "hide": false,
      "icon": {
        "color": "terminal.ansiRed",
        "id": "device-desktop"
      },
      "isBackground": false,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "(.*?)"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "label": "npm_test",
      "options": {
        "cwd": "source/WebUI"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Changes detected"
          },
          "endsPattern": {
            "regexp": "bundle generation (complete|failed)"
          }
        }
      }
    },
    {
      "type": "dotnet",
      "task": "build",
      "label": "dotnet_build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "source"
      }
    }
  ]
}