  "version": "0.2.0",
  "configurations": [
    {
      "name": "WebApi",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/source/WebApi/WebApi.csproj"
    },
    {
      "command": "npm start",
      "name": "WebUI",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/source/WebUI/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ],
  "compounds": [
    {
      "name": "HeroProject",
      "stopAll": true,
      "configurations": [
        "WebApi",
        "WebUI"
      ]
    }
  ]
}
